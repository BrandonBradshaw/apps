<%- include("./partials/header") %>

<body class="h-screen bg-blue-400 items-center">   
    <h4 class="font-semibold tracking-wider justify-center">Login with details</h4>
    <div class="content flex flex-row justify-center items-center">
        <div class="design h-2/4 w-1/3">
            <img src="/images/Mobile login-bro.svg"  alt="Login Illustrator">
        </div>
        <div class="content w-1/3">
            <form action="/" method="POST" class="flex flex-col">
                <label for="email" class="py-2">Email : </label>
            <input type="email" name="email" class="rounded w-2/3" required>
            <label for="password" class="py-2">Password : </label>
            <input type="text" name="password" class="rounded w-2/3 rounded py-2" required>
            <button type="submit" class="bg-blue-700 rounded w-2/3 py-2">Chip in!</button>
            </form>
        </div>
    </div>


</body>
