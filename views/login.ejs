<%- include("./partials/header") %>

<body class="h-screen bg-blue-100 items-center">   
    <div class="h-24 bg-green-400 w-full mb-4 flex  justify-center items-center"><h2 class="text-white text-3xl py-2">Brandon HiveOs feeds</h2></div>
    <h4 class="font-semibold tracking-wider text-center text-2xl mt-12">Kindly Login to Dashboard</h4>
    <div class="content flex md:flex-row sm:flex-col flex-wrap justify-center items-center">
        <div class="design h-2/4 w-1/3">
            <img src="/images/Mobile login-bro.svg"  alt="Login Illustrator">
        </div>
        <div class="content w-1/3">
            <form action="/" method="POST" class="flex flex-col">
                <label for="email" class="py-2">Email : </label>
            <input type="email" name="email" class="rounded w-2/3 h-8 text-center" required>
            <label for="password" class="py-2">Password : </label>
            <input type="password" name="password" class="rounded w-2/3 h-8 text-center" required>
            <button type="submit" class="bg-green-600 rounded w-2/3 mt-4 h-12 hover:bg-green-800">Chip in!</button>
            </form>
        </div>
    </div>


</body>
